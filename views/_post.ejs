
    <% for(let i of post){ %>
            <li id="post-<%= i.id %>">
                <% if(locals.user && (i.user.id == locals.user.id)){ %>  <!--not i.user because post is populated with user-->
                <small><a class="delete-post-button" href="/posts/destroy/<%= i.id %>">X</a></small>
                <% } %>
                 <%= i.content %>
            </li>
            <span><%= i.user.name %></span>
            <div class="comments">
                    <form action="/comments/create" method="POST">
                            <input type="text" name="content">
                            <input type="hidden" name="post" value="<%= i._id%>">
                            <input type="submit" value="comment">
                    </form>
            </div>
            <div class="post-comments-list">
                <ul id="post-comment-<%= post._id%>">
                    <% for(j of i.comments){ %>
                        <li>
                            <p> 
                            <% if(locals.user && (j.user.id == locals.user.id)){ %>  <!--not i.user because post is populated with user-->
                                <small><a href="/comments/destroy/<%= j.id %>">X</a></small>
                            <% } %>
                            <%= j.content %>
                        </p>
                        <small> <%= j.user.name %> </small>
                        </li>
                    <% } %>
                </ul>
            </div>
    <% } %> 