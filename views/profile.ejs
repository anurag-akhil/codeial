<h1>you are in profile section</h1>

<% if(profile_user.id == locals.user.id){ %>
    <form action="/users/update/<%= profile_user.id %>" method="POST">
        <input type="text" name="name" placeholder="new name" value='<%= profile_user.name%>' required>
        <input type="email" name="email" placeholder="new name" value='<%= profile_user.email%>' required>
        <input type="submit">
    </form>
<%} else{ %>
    <h2><%= profile_user.name%></h2>
    <h3><%= profile_user.email %></h3>
<%}%>